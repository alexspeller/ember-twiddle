<SidebarLayout
  @session={{@session}}
  @isSidebarOpen={{@isSidebarOpen}}
  @onSidebarUpdated={{@onSidebarUpdated}}
  @sidebarComponent={{component "gist-header"
    model=model
    session=session
    unsaved=unsaved
    isGistSaving=isGistSaving
    activeEditorCol=activeEditorCol
    activeFile=activeFile
    isRevision=isRevision
    selectedKeyMap=settings.keyMap
    titleChanged=(action "titleChanged")
    addFile=(action "addFileWithPrompt")
    addHelper=(action "addHelperWithPrompt")
    addComponent=(action "addComponentWithPrompt")
    addUnitTestFile=(action "addUnitTestFile")
    addIntegrationTestFile=(action "addIntegrationTestFile")
    addAcceptanceTestFile=(action "addAcceptanceTestFile")
    renameFile=(action "renameFileWithPrompt")
    removeFile=(action "removeFileWithConfirm")
    setEditorKeyMap=(action "setEditorKeyMap")
    versionSelected=(action "versionSelected")
    openFile=@openFile
  }}
  as |sidebar|
>
  {{gist-body model=model
              columns=columns
              settings=settings
              numColumns=realNumColumns
              fullScreen=fullScreen
              fileTreeShown=sidebar.isSidebarOpen
              notify=notify
              isBuilding=isBuilding
              buildErrors=buildErrors
              applicationUrl=applicationUrl
              buildOutput=buildOutput
              testsEnabled=testsEnabled
              focusEditor=(action "focusEditor")
              selectFile=(action "selectFile")
              updateColumn=(action "updateColumn")
              removeColumn=(action "removeColumnAndTransition")
              addColumn=(action "addColumnAndTransition")
              showFileTree=sidebar.showSidebar
              hideFileTree=sidebar.hideSidebar
              liveReloadChanged=(action "liveReloadChanged")
              runNow=(action "runNow")
              exitFullScreen=(action "exitFullScreen")
              switchTests=(action "switchTests")
  }}
</SidebarLayout>

{{gist-footer owner=model.owner originalGist=model.forkOf}}
