<div class="header">
  {{yield}}
  <div class="controls">
    &nbsp;
    <span class="hint--bottom hint--rounded" data-hint="Expand All">
      <span class="twiddlicon twiddlicon-expand-all" {{action 'expandAll'}}></span>
    </span>
    &nbsp;
    <span class="hint--bottom hint--rounded" data-hint="Collapse All">
      <span class="twiddlicon twiddlicon-collapse-all" {{action 'collapseAll'}}></span>
    </span>
  </div>
</div>

<EmberJstree
  class="ember-jstree"
  @plugins="contextmenu"
  @contextmenuOptions={{contextmenuOptions}}
  @data={{this.fileTreeData}}
  @actionReceiver={{this.jsTreeActionReceiver}}
  @eventDidSelectNode={{action "handleSelectTreeNode"}}
  @eventDidBecomeReady={{action "didBecomeReadyOptional"}}
  @eventDidChange={{action "didChangeOptional"}}
  data-test-file-tree
/>
