{{#if isGistSaving}}
  <span>Saving...</span>
{{else if unsaved}}
  <span data-test-unsaved-indicator>Unsaved</span>
{{else}}
  <span>{{model.files.length}} files</span>
  {{#unless model.isNew}}
    <a class="gist-link" href={{model.htmlUrl}} target="_blank" rel="noopener">saved to Gist, rev {{model.currentRevision}}</a>
  {{/unless}}
{{/if}}
